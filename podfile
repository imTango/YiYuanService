#Uncomment the next line to define a global platform for your project
platform :ios, '8.0'

target 'YiYuanService' do
  # Uncomment the next line if you're using Swift or would like to use dynamic frameworks
  # use_frameworks!

  # Pods for YiYuanService
  pod 'AFNetworking' 
  pod 'SDCycleScrollView','~> 1.66'  # 轮播组件
  pod 'SDWebImage'
  pod 'SDWebImage/GIF'    # 添加动态图库
  pod 'Masonry'
  pod 'MJRefresh'
  pod 'MJExtension'
  pod 'RTRootNavigationController' # 导航栏
  pod 'SVProgressHUD'     # 提示弹框
  pod 'IQKeyboardManager' # 处理键盘遮挡
  pod 'ZFPlayer'          # 播放器
  pod 'PPNetworkHelper'   # 网络请求数据缓存（按请求为key缓存)
  pod 'DZNEmptyDataSet'   # tableview无数据时的占位
# pod 'XHLaunchAd'        # 启动广告
  pod 'WZLBadge'          # uiview的角标
  pod 'DateTools'         # 时间计算库
  use_frameworks!
  pod 'FSCalendar'        # 日历库
  pod 'MLeaksFinder'      # 检测内存泄漏的工具，微信阅读团队开发的工具
  pod 'FMDB'              # 数据库SQLite的工具类库
  pod 'Bugly'             # 腾讯错误统计SDK
  pod 'SAMKeychain'       # 钥匙串
  
  # 集成微信(精简版0.2M)
  pod ‘UMengUShare/Social/ReducedWeChat'
  
  # 集成QQ/QZone/TIM(精简版0.5M)
  pod ‘UMengUShare/Social/ReducedQQ'

  # 集成新浪微博(精简版1M)
  pod ‘UMengUShare/Social/ReducedSina'


  target 'YiYuanServiceTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'YiYuanServiceUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
